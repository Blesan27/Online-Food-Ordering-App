<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageAccounts"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">

        <EditText
            android:id="@+id/edit_text_username"
            android:maxLines="1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="Username"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="Change"
            android:onClick="changeUsername"
            android:textColor="#000"
            android:background="@drawable/rounde_edge"
            android:backgroundTint="@color/colorPrimary"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">

        <EditText
            android:id="@+id/edit_text_password"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:hint="Password"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="Change"
            android:onClick="changePassword"
            android:textColor="#000"
            android:background="@drawable/rounde_edge"
            android:backgroundTint="@color/colorPrimary"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">

        <EditText
            android:id="@+id/edit_text_BaseUrl"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="BaseUrl"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="Change"
            android:onClick="changeBaseUrl"
            android:textColor="#000"
            android:background="@drawable/rounde_edge"
            android:backgroundTint="@color/colorPrimary"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">

        <EditText
            android:id="@+id/edit_text_port"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="Port"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="Change"
            android:onClick="changePort"
            android:textColor="#000"
            android:background="@drawable/rounde_edge"
            android:backgroundTint="@color/colorPrimary"/>
    </LinearLayout>
</LinearLayout>